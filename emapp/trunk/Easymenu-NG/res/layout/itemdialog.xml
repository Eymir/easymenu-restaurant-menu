<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content" android:padding="10dip" android:background="@color/dialog_background_df"
    android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="50dip">
 
 <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:gravity="top"
    android:padding="15dip">
    <!--  android:background="#99684141" --> 

	  <ImageView
        android:id="@+id/itemImage" 
        android:layout_width="480px"
        android:layout_height="320px"
        android:src="@null" android:scaleType="fitXY" />"
        
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
    <TextView
        android:id="@+id/itemLabel" android:textColor="@color/dialog_text_df"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:padding="10dip"
        android:text="TextView" android:textSize="20sp"/>
    
      <TextView android:textColor="@color/dialog_text_df"
        android:id="@+id/itemDescription" android:textSize="18sp" android:padding="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    
        
    </LinearLayout>

 </LinearLayout>
 <LinearLayout android:id="@+id/numberpicker" android:layout_height="wrap_content" 
			android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center">
			<biz.easymenu.easymenung.NumberPicker
				android:id="@+id/itemnumpick" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:layout_gravity="center_horizontal" />
			<Button android:id="@+id/itembtnOK" android:textSize="18sp"  
				android:text="@string/btnOK"  android:textStyle="bold"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" android:layout_marginLeft="2dip"
				style="@style/button_df" />
	</LinearLayout>
 <LinearLayout 
	android:id="@+id/spinneritemll" android:layout_height="wrap_content" 
	android:layout_width="match_parent"  android:gravity="center">
		<ProgressBar android:id="@+id/pBarItem"
			android:layout_width="wrap_content" android:layout_gravity="center" android:padding="20dip"
		    android:layout_height="wrap_content" />
			
 	</LinearLayout>
</LinearLayout>
